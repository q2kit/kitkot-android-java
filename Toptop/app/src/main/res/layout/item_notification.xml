<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/teal_200"
    android:layout_marginBottom="5dp"
    android:id="@+id/chatItem"
    >

    <!-- User avatar -->
    <ImageView
        android:id="@+id/imAvatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/avatar_placeholder"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/llInfo"
        android:layout_toRightOf="@+id/imAvatar"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/purple_500"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text="Ba Dao"
            android:layout_toEndOf="@id/avatarImageView"
            android:layout_alignBaseline="@id/avatarImageView"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/tvInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/purple_500"
            android:maxWidth="240dp"
            android:text="like your video"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"/>
        <TextView
            android:id="@+id/tvSendTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/purple_500"
            android:background="@drawable/chat_bubble_background"
            android:maxWidth="240dp"
            android:text="20:30"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            />
    </LinearLayout>


</RelativeLayout>
