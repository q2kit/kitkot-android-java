<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".phantich.PhanTichActivity"
    android:background="@color/light_gray">
    <EditText
        android:id="@+id/eStartDate"
        android:layout_width="match_parent"
        android:hint="Choose date start"
        android:textSize="18dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="20dp"
        android:background="@drawable/cover_text"
        />
    <EditText
        android:id="@+id/eEndDate"
        android:layout_width="match_parent"
        android:hint="Choose date end"
        android:textSize="18dp"
        android:layout_height="35dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/eStartDate"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/cover_text"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        app:layout_constraintTop_toBottomOf="@id/eEndDate"
        android:text="Statistic"
        android:textSize="20dp"
        android:id="@+id/btnPhantich"
        android:textAllCaps="false"
        android:background="@drawable/cover_button"
        />
    <com.github.mikephil.charting.charts.BarChart
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/barchart"
        tools:ignore="MissingClass"
        app:layout_constraintTop_toBottomOf="@id/btnPhantich"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginHorizontal="15dp"
        />

    <com.github.mikephil.charting.charts.BarChart
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/barchartLike"
        tools:ignore="MissingClass"
        app:layout_constraintTop_toBottomOf="@id/barchart"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginHorizontal="15dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>