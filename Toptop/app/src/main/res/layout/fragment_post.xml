<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.post.PostFragment"
    android:background="#0EB2BE">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/waiting_gif"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/waiting"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_select"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Load video from gallery"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/waiting_gif"
        android:background="@drawable/coverbtnchat"/>

    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:hint="Description"
        android:paddingLeft="20dp"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_select"
        android:background="@drawable/cover_white"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#959595"
        app:layout_constraintTop_toBottomOf="@+id/description"
        android:layout_marginHorizontal="35dp"/>

    <CheckBox
        android:id="@+id/is_premium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Is Premium"
        android:textStyle="bold"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        android:textColor="#131F45"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload"
        android:layout_marginBottom="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/cover_button"
        />

</androidx.constraintlayout.widget.ConstraintLayout>